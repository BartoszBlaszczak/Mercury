<?xml version="1.0" encoding="UTF-8" ?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
	<persistence-unit name="mercuryPersister" transaction-type="JTA">
		<jta-data-source>java:jboss/mercuryDataSource</jta-data-source>
		
		<class>pl.uz.mercury.entity.security.Operator</class>
		<class>pl.uz.mercury.entity.security.Role</class>
		<class>pl.uz.mercury.entity.Merchandise</class>
		<class>pl.uz.mercury.entity.Sale</class>
		
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>

</persistence>

